@model pcea.Models.AuditTrailObj
@{
    ViewData["Title"] = "System Audit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


    <div class="card card-default card-table">
        <div class="card-body">
            <input id="hfdStage" type="hidden" value="1" />
            <div class="text-center w-10`">
                <label class="text-danger">@Html.Raw(@ViewData["msg"])</label>
            </div>
            @*SEARCH AREA*@
            <div class="row div-search" id="divSearch">
                <div class="col-lg-12 form-group text-center">
                    <br />
                </div>
                <div class="col-lg-3 form-group">
                </div>
                <div class="col-lg-6 form-group">
                    <form asp-controller="Audits" asp-action="AuditTrail" method="post">
                        <div class="input-group mb-2">
                            <select asp-for="Name"
                                    asp-items="@Model.NameList" class="form-control custom-select">
                                <option value="">Select AuditTrail</option>
                            </select>
                            <div class="input-group-append">
                                <input id="btnSearch" type="submit" value="Load" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 form-group">
                </div>

                <div class="col-lg-12 form-group" style="overflow-x:auto">
                    @if (Model.LogItems != null)
                    {
                        <table class="table table-bordered table-striped table-hover table-sm" id="indexDataTable">
                            <thead>
                                <tr>
                                    <th class="font-weight-bold">
                                        UserId
                                    </th>
                                    <th class="font-weight-bold">
                                        Name
                                    </th>
                                    <th class="font-weight-bold">
                                        Institution
                                    </th>
                                    <th class="font-weight-bold">
                                        Accessed Module
                                    </th>
                                    <th class="font-weight-bold">
                                        Activity Details
                                    </th>
                                    <th class="font-weight-bold" >
                                        Activity Time
                                    </th>
                                    <th class="font-weight-bold">
                                        User Type
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LogItems)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.USER_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OPERATORNAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ACCESSED_MODULE)
                                        </td>
                                        <td style="width:50%">
                                            @Html.DisplayFor(modelItem => item.ACTIVITY_DETAIL)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ACTIVITY_TIME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.USER_TYPE)
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>


        </div>
    </div>